
<div class="row">
		<div class="container spring-card mt-5">
			<h3 class="text-center" id="parkname">{{springs.name}}</h3>
		<img src="../.{{springs.image_url}}" class="w-30 img-thumbnail mx-auto" alt="an image of a spring">


		<div class="col-sm">

			<ul class="springs-list">
				<li id="{{springs.id}}">{{springs.description}}</li>
				<li id="distance">Distance to spring</li>


				
				<li id="fee" data-Fees= "{{springs.fees}}">Fees: {{springs.fees}}</li>
				
				<li id="pets" data-pets="{{springs.pets}}"></li>

				<li id="stateparks" data-stateparks = "{{springs.statepark}}"></li>
				<li id="camping" data-camping = "{{springs.camping}}"></li>
				<li id="scuba" data-ScubaDiving = "{{springs.scuba}}"></li>
				
				
				
				
				<li id="rating">My rating
					<!-- creates a personal star rating -->
				<div class="rating">
  					<span><input class="five-pointed-star" name="rating" id="str5" value="5">5<label for="str5"></label></span>
  					<span><input class="five-pointed-star" type="radio" name="rating" id="str4" value="4">4<label for="str4"></label></span>
  					<span><input class="five-pointed-star" type="radio" name="rating" id="str3" value="3">3<label for="str3"></label></span>
  					<span><input class="five-pointed-star" type="radio" name="rating" id="str2" value="2">2<label for="str2"></label></span>
  					<span><input class="five-pointed-star" type="radio" name="rating" id="str1" value="1">1<label for="str1"></label></span>
					</div>
					</div>
				
				<div class="col-sm">
						 <article  class="springs-container bg-custom ">
						
						<p id="weather" class="text-center"></p>
						<p class="text-center">
						<span class="text-center" id="temperature"></span>
						<span id="condition"></span>
						</p>
						<p id="springZip"class="d-none hidden">{{springs.zipcode}}</p>
						<p id="springlat"class="d-none hidden">{{springs.lat}}</p>
						<p id="springlng"class="d-none hidden">{{springs.lng}}</p>
					</article>
					<article id="map" class=" springs-container bg-danger">Map</article>
					
			
		</div>
		</div>

		
		
  	</div>
</div>
  <script>
  var myGlobal = {
	selectedSpringId: {{springs.id}},
	selectedSpringFees: '{{springs.fees}}',
	selectedSpringPets: {{springs.pets}},
	selectedSpringStatepark: {{springs.statepark}},
	selectedSpringCamping: {{springs.camping}},
	selectedSpringScuba: {{springs.scuba}},
	selectedSpringLat: {{springs.lat}},
	selectedSpringLng: {{springs.lng}},
	selectedSpringZip: {{springs.zipcode}},
  }
  </script>
  <script type="module"  src="../../js/springs.js" defer></script>


