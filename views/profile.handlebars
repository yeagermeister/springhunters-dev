<div class="row mt-5 m-1">
  <div class="card box border border-rounded shadow spring-card flex-grow-1 p-2 m-5">
    <h2>Welcome, {{user.name}}!</h2>
    <table>
      <tr>
        <td>First Name:</td>
        <td>{{user.first_name}}</td>
        <td>Last Name:</td>
        <td>{{user.last_name}}</td>
        <td>Email:</td>
        <td>{{user.email}}</td>
        <td>Zipcode:</td>
        <td>{{user.zipcode}}</td>
      </tr>
    </table>
    {{!-- update information button --}}
    <form class="profile-form">
      <div class="form-group">
        <button class="btn btn-primary" id="newInfo" type="submit">Update</button>
      </div>
    </form>

  </div>

