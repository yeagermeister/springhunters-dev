<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Project:</h3>

    <form class="form new-spring-form">
      <div class="form-group">
        <label for="spring-name">spring name:</label>
        <input class="form-input" type="text" id="spring-name" name="spring-name" />
      </div>
      <div class="form-group">
        <label for="spring-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="spring-funding" name="spring-funding" />
      </div>
      <div class="form-group">
        <label for="spring-desc">description:</label>
        <textarea class="form-input" id="spring-desc" name="spring-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

